<h1>New Post</h1>
<%= form_for :post, url: posts_path do |f| %>
 
  <p><!-- to do: current_user --></p>
  <p>
    <%= f.label :parent %><br>
    <%= f.select :parent, Post.where(parent_id: nil).map{|p| p.author.handle << " - " << p.body} %>
  </p>

  <p>
    <%= f.label :handle %><br>
    <%= text_area_tag :body %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>